{
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "%(asctime)s - %(levelname)s - %(name)s: %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "DEBUG"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "level": "DEBUG",
            "filename": "absinthe.log",
            "maxBytes": 10485760,
            "backupCount": 20,
            "encoding": "utf8"
        }
    },
    "loggers": {
        "init": {
            "handlers": [
                "file",
				"console"
            ],
            "level": "DEBUG",
            "propagate": true
        },
        "client": {
            "handlers": [
                "file",
				"console"
            ],
            "level": "DEBUG",
            "propagate": true
        },
        "abs": {
            "handlers": [
                "console"
            ],
            "level": "DEBUG",
            "propagate": true
        },
        "server": {
            "handlers": [
                "file"
            ],
            "level": "DEBUG",
            "propagate": true
        }
    },
    "version": 1
}
